@page "/create"
<EditForm Model="@model" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">
            Descrição
        </label>
        <InputText class="form-control" @bind-Value="model.Description" />
    </div>

    <div class="mb-3">
        <label class="form-label">
            Valor
        </label>
        <InputNumber class="form-control" @bind-Value="model.Value" />
    </div>

    <div class="mb-3">
        <label class="form-label">
            Origem
        </label>

        <InputSelect class="form-select" @bind-Value="model.OriginId">
            <option value="">Selecione</option>
            @foreach (var origin in origins)
            {
                <option value="@origin.Id"> @origin.Alias</option>
            }
        </InputSelect>
    </div>

    <div class="mb-3">
        <label class="form-label">
            Data estimada
        </label>

        <InputDate class="form-control" @bind-Value="model.EstimatedDate" />
    </div>

    <div class="form-check">
        <InputCheckbox class="form-check-input" @bind-Value="model.IsConfirmed" />
        <label class="form-check-label" for="@model.IsConfirmed"> Está confirmada ? </label>
    </div>

    @if (model.IsConfirmed)
    {
        <div class="mb-3">
            <label class="form-label"> Data de confirmação</label>
            <InputDate class="form-control" @bind-Value="model.ConfirmedDate" />
        </div>
    }

    <button class="btn btn-success" type="submit">Submit</button>
</EditForm>