@page "/transaction/create"

<EditForm Model="@Model" OnValidSubmit="@HandleValidSubmitAsync">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">
            Descrição
        </label>
        <InputText class="form-control" @bind-Value="Model.Description" />
    </div>

    <div class="mb-3">
        <label class="form-label">
            Valor
        </label>
        <InputNumber class="form-control" @bind-Value="Model.Value" />
    </div>

    <div class="mb-3">
        <label class="form-label">
            Origem
        </label>

        <InputSelect class="form-select" @bind-Value="Model.OriginId">
            <option value="">Selecione</option>
            @foreach (var origin in Origins)
            {
                <option value="@origin.Id"> @origin.Alias</option>
            }
        </InputSelect>
    </div>

    <div class="mb-3">
        <label class="form-label">
            Categoria
        </label>

        <InputSelect class="form-select" @bind-Value="Model.CategoryId">
            <option value="">Selecione</option>
            @foreach (var category in Categories)
            {
                <option value="@category.Id"> @category.Name</option>
            }
        </InputSelect>
    </div>

    <div class="mb-3">
        <label class="form-label">
            Data estimada
        </label>

        <InputDate class="form-control" @bind-Value="Model.EstimatedDate" />
    </div>

    <div class="form-check">
        <InputCheckbox class="form-check-input" @bind-Value="Model.IsConfirmed" />
        <label class="form-check-label" for="@Model.IsConfirmed"> Está confirmada ? </label>
    </div>

    @if (Model.IsConfirmed)
    {
        <div class="mb-3">
            <label class="form-label"> Data de confirmação</label>
            <InputDate class="form-control" @bind-Value="Model.ConfirmedDate" />
        </div>
    }

    <button class="btn btn-success" type="submit">Submit</button>
</EditForm>